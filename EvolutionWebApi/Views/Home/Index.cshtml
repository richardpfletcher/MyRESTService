<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-touch.js"></script>
<script src="~/Scripts/angular-animate.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/ui-grid.min.js"></script>
<link href="~/Content/ui-grid.min.css" rel="stylesheet" />
<script src="~/Scripts/evolution/ctrlsearch.js?version=1"></script>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<div ng-app="myApp">

    <div ng-controller="CtrlSearch">

        <div id="divJPG">

        </div>



        <div class="form-group">

            <div class="form-group">
                <label for="repeatSelectCategorys">Category</label>
                <select name="repeatSelectCategorys" class="form-control" id="repeatSelectCategorys" ng-change="categoryChange()" ng-model="category">
                    <option value="0" disabled selected>Please select a category</option>
                    <option ng-repeat="category in categoryList" value="{{category.ID}}">{{category.Category}} </option>
                </select>
            </div>

            <div class="form-group">
                <label for="repeatSelectAlbum">Title</label>
                <select name="repeatSelectAlbum" class="form-control" id="repeatSelectAlbum" ng-change="partofalbumChange()" ng-model="partofalbum">
                    <option value="0" disabled selected>Please select a title</option>
                    <option ng-repeat="partofalbum in partofalbumList" value="{{partofalbum.ID}}">{{partofalbum.Category}} </option>
                </select>
            </div>

            <div class="form-group">
                <label for="repeatSelectTheme">Theme</label>
                <select name="repeatSelectTheme" class="form-control" id="repeatSelectTheme" ng-change="themeChange()" ng-model="theme">
                    <option value="0" selected>Please select a title</option>
                    <option ng-repeat="theme in themeList" value="{{theme.ID}}">{{theme.Category}} </option>

                </select>
            </div>


            <input type="text" id="title" ng-model="title" class="targetTitle form-control">
            <button ng-click="Search()" class=" btn btn-primary btn-lg">Search</button>

            <div id="divPDF">

            </div>


            <div id="divID">

            </div>


            <div ui-grid="gridOptions" ui-grid-pagination ui-grid-selection class="grid"></div>
        </div>

        <div class="edit">
            <h2>Modal Example</h2>
            <!-- Trigger the modal with a button -->
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                        </div>
                        <div class="modal-body">
                            <p>Edit</p>

                            <div class="form-group">
                                <label for="ID">ID</label>
                                <input type="text" id="ID" readonly="true" ng-model="ID" class="targetTitle form-control">

                            </div>

                            <div class="form-group">
                                <label for="FullName">Full Name</label>
                                <input type="text" id="FullName" ng-model="FullName" class="targetTitle form-control">
                              
                            </div>

                            <div class="form-group">
                                <label for="repeatSelectTheme">Theme</label>
                                <select name="repeatSelectTheme" class="form-control" id="SelectTheme" ng-change="themeEditChange()" ng-model="selectedUser">
                                    <option value="0" disabled selected>Please select a title</option>
                                    <option ng-repeat="themeEdit in themeList" value="{{themeEdit.ID}}">{{themeEdit.Category}} </option>

                                </select>

                                <br><br>

                                Selected ID:  {{selectedUser}}

                            </div>

                           
                        </div>

                        <div class="modal-footer">
                            <button type="button" ng-click="Save()" class="btn btn-default">Save</button>
                            <button type="button" id="closeButton" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>


    </div>


</div>